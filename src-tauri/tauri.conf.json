{
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../out",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "GraphiteDesktop",
    "version": "0.5.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "create": true
      },
      "http": {
        "request": true,
        "scope": ["https://app.graphite.dev/*", "https://*.graphite.*/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "nsis", "msi", "app", "dmg", "updater"],
      "identifier": "com.glitchtech.graphitedesktop",
      "publisher": "GlitchTech Developments",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "nsis": {
          "compression": "lzma"
        }
      },
      "macOS": {
        "minimumSystemVersion": "10.13",
        "exceptionDomain": "app.graphite.dev"
      }
    },
    "security": {
      "csp": "default-src * 'self' data: tauri://* https://app.graphite.dev",
      "devCsp": "default-src * 'self' data: tauri://* http://localhost:3000 https://app.graphite.dev"
    },
    "windows": [
      {
        "fullscreen": false,
        "title": "Graphite Desktop",
        "width": 800,
        "minWidth": 800,
        "height": 600,
        "minHeight": 600,
        "resizable": true,
        "decorations": true,
        "center": true,
        "url": "index.html",
        "label": "apploader"
      },
      {
        "visible": false,
        "fullscreen": false,
        "title": "Graphite Desktop",
        "width": 800,
        "minWidth": 800,
        "height": 600,
        "minHeight": 600,
        "resizable": true,
        "decorations": true,
        "center": true,
        "url": "https://app.graphite.dev",
        "label": "graphite"
      }
    ]
  }
}
